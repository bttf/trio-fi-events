<div id="miniMap"></div>
<div class="form-wrapper">
  <form action="">
    <div class='form-group'>
      <label for="venueInput">Venue</label>
      {{input id='venueInput' class='form-control' type='text' value=name}}
    </div>

    <div class='form-group'>
      <label for="addressInput">Address (optional)</label>
      {{input id='addressInput' class='form-control' type='text' value=address}}
    </div>

    <div class='form-group'>
      <label for="cityInput">City (required)</label>
      {{input id='cityInput' class='form-control' type='text' value=city}}
    </div>

    <button id='searchBtn' type='submit' class='btn btn-success' {{action 'updateMap'}}>Search</button>
    <button type='button' class='btn btn-primary' {{action 'saveVenue'}}>Save Venue</button>
  </form>
</div>
