<div id="miniMap"></div>
<div class="form-wrapper">
  <form action="">
    <div class='form-group'>
      <label for="venueInput">Venue Name (required)</label>
      {{input id='venueInput' class='form-control' type='text' value=name placeholder="Churchill's"}}
    </div>

    <div class='form-group'>
      <label for="addressInput">Address (optional)</label>
      {{input id='addressInput' class='form-control' type='text' value=address}}
    </div>

    <div class='form-group'>
      <label for="cityInput">City, State (required)</label>
      {{input id='cityInput' class='form-control' type='text' value=city placeholder="Miami, FL"}}
    </div>

    <button id='searchBtn' type='submit' class='btn btn-success' {{action 'updateMap'}}>Search</button>
    <button type='button' class='btn btn-primary' {{action 'saveVenue' venue}}>Save Venue</button>
  </form>
</div>
